{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Quest list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Q</th>
                <th>A</th>
                <th>Email</th>
                <th>Executor</th>
                <th>Comment</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('brother_quest_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.q }}</td>
                <td>{{ entity.a }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.executor }}</td>
                <td>{{ entity.comment }}</td>
                <td>{{ entity.priority }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('brother_quest_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('brother_quest_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('brother_quest_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
